#version 330 core						
layout(location = 0) in vec4 pos_model;				
layout(location = 1) in vec4 pos_tex;					
layout(location = 2) in vec4 pos_normal;				
uniform mat4 mat_model_view;							
uniform mat4 mat_normal;						
out vec4 coord_tex;
out vec4 coord_normal;
										
void main() {											
    gl_Position = mat_model_view * pos_model;
    coord_tex = pos_tex;
    coord_normal = (mat_normal * pos_normal.xyz;						
}	